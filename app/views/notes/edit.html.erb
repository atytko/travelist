<div class="intro py-3 text-center">
    <div class="container">
      <h2 class="display-5 my-4">Edit your post </h2>
      <%= form_for(@note) do |f| %>
          <%= f.label :city %>
          <%= f.text_field :city, :class => 'form-control mb-2'  %>
          <%= f.label :message %>
          <%= f.text_field :message, :class => 'form-control mb-2'  %>
          <%= f.label :date %>
          <%= f.text_field :created_at, :class => 'form-control'  %>
          <%= f.submit 'Update the post', :class => 'btn btn-ghost mt-3' %>
        <% end %>
    </div>
</div>