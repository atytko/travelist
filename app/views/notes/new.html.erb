      <%= form_for(@note) do |f| %>
        <div class="form-group">
            <%= f.label :city, 'City' %>
            <%= f.text_field :city, :required => true, :class => 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, :required => true, size: '50x5', :class => 'form-control' %>
        </div>        
        <%= f.submit 'Create a post', :class => 'btn btn-ghost'  %>
      <% end %>
    </div>
  </div>



