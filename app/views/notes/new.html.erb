<div class="intro py-3 bg-white text-center">
    <div class="container">
      <h2 class="text-primary display-3 my-4">Text here</h2>
      <%= simple_form_for(@note) do |f| %>
        <div class="form-group">
            <%= f.label :city, 'City' %>
            <%= f.text_field :city, :class => 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, size: '50x5', :class => 'form-control' %>
        </div>        
        <%= f.submit 'Create a post', :class => 'btn btn-primary'  %>
      <% end %>
    </div>
  </div>



